{
  "name": "ocean-status-service",
  "description": "Ocean Protocol Status Service",
  "version": "0.1.1",
  "author": "Ocean Protocol <devops@oceanprotocol.com>",
  "license": "Apache-2.0",
  "main": "./dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "build": "npm run clean && tsc --sourcemap -p tsconfig.json",
    "lint": "eslint --ignore-path .gitignore --ext .js --ext .ts --ext .tsx . && npm run type-check",
    "clean": "rm -rf ./dist",
    "format": "prettier --ignore-path .gitignore './**/*.{css,yml,js,ts,tsx,json}' --write",
    "test:format": "npm run format && npm run lint",
    "test": "ts-mocha -p test/tsconfig.json --exit test/**/*.test.ts",
    "type-check": "tsc --noEmit",
    "release": "release-it --non-interactive",
    "changelog": "auto-changelog -p"
  },
  "dependencies": {
    "auto-changelog": "^2.4.0",
    "bignumber.js": "^9.1.0",
    "cors": "^2.8.5",
    "cross-fetch": "^3.1.5",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.0",
    "express": "^4.18.1",
    "mongoose": "^6.6.5",
    "mongoose-bignumber": "^1.2.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.8.0",
    "octokit": "^2.0.7",
    "release-it": "^15.5.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/cors": "^2.8.12",
    "@types/expect": "^24.3.0",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/sqlite3": "^3.1.8",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.39.0",
    "chai": "^4.3.6",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "supertest": "^6.2.4",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "4.8.4"
  },
  "release-it": {
    "hooks": {
      "after:bump": "npm run changelog"
    },
    "plugins": {},
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  }
}
